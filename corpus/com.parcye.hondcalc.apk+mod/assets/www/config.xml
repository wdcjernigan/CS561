<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.parcye.hondcalc"
	version 	= "1.0.0">

	<name>Hondenbrokken calculator</name>

	<description>
		Bereken hoeveel voeding je hond nodig heeft, bij benadering.
	</description>

	<author href="http://www.parcye.com"
		email="colin@parcye.com">
		Parcye
	</author>
		
	<!-- iOS requires specific dimensions for icons; classic iPhone screens, Retina
	    displays, and iPad screens respectively -->
	<icon src="images/icon-57x57.png" width="57" height="57"/>
	<icon src="images/icon-72x72.png" width="72" height="72"/>
	<icon src="images/icon-114x114.png" width="114" height="114"/>
	
	<!-- Android requires specific dimensions; ldpi, mdpi, and hdpi respectively -->
	<icon src="images/icon-36x36.png" width="36" height="36"/>
	<icon src="images/icon-48x48.png" width="48" height="48"/>
	<icon src="images/icon-72x72.png" width="72" height="72"/>

	<gap:splash src="images/startup.png" />

	<preference name="permissions" value="none"/>
	<preference name="phonegap-version" value="1.5.0" />
	<preference name="orientation" value="portrait" />
	
	<!-- sample preference specification -->
	<!-- <preference name="autorotate" value="false" readonly="true"/> -->
</widget>
